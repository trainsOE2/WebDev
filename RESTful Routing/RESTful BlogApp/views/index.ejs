<% include ./partials/header %>


<div class="ui container main">

<% blogs.forEach(function(blog){ %>
  <div>
    <h2><%= blog.title %></h2>
    <img src="<%= blog.image %>">
    <span><%= blog.created.toDateString() %></span>
    <p><%= blog.body.substring(0, 100) %>...</p>
    <a href="/blogs/<%= blog._id %>">Read More</a>
  </div>
<% }) %>

</div>

<% include ./partials/footer %>
